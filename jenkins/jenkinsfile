pipeline{
    agent any
    stages{
        stage('Build'){
            steps{
                sh'''
                cat /etc/os-release
                '''
            }
               
        }
        stage('memory details){
            steps{
                sh'''
                echo"memory details: " free -m
                '''
            }
        }
        stage('cpu-details'){
            steps{
                sh'''
                echo"cpu details: " 
                lscpu
                '''
            }
        }
        stage('hostname){
            steps{
                sh'''
                echo"ip details: " 
                hostname -I
                '''
            }
        }
        stage('cal'){
            steps{
                sh'''
                echo"cal details: " 
                cal
                '''
            }
        }
    }
    
}
