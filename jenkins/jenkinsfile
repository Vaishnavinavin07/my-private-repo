pipeline{
    agent any
    stages{
        stage('Build'){
            steps{
                sh'''
                cat /etc/os-release
                '''
            }
               
        }
        stage('memory details'){
            steps{
                sh'''
                free -m
                '''
            }
        }
        stage('cpu-details'){
            steps{
                sh''' 
                lscpu
                '''
            }
        }
        stage('hostname'){
            steps{
                sh'''
                hostname -I
                '''
            }
        }
        stage('cal'){
            steps{
                sh'''
                cal
                '''
            }
        }
    }
    
}
