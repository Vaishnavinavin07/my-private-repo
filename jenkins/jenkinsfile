
pipeline{
    agent any
    stages{
        stage('Build'){
            steps{
                sh'''
                cat /etc/os-release
                '''
            }
               
        }
        stage('memory details'){
            steps{
                sh'''
                echo 'memory details: '
                free -m
                '''
            }
        }
        stage('cpu-details'){
            steps{
                sh''' 
              echo 'cpu configaration: '
                lscpu
                '''
            }
        }
        stage('hostname'){
            steps{
                sh'''
              echo 'hostname configaration: '
                hostname -I
                '''
            }
        }
        stage('cal'){
            steps{
                sh'''
               echo 'cal detailes: '
                cal
                '''
            }
        }
       stage('date'){
            steps{
                sh'''
                echo 'date details: '
                 date
                '''
         }               
        }

    }
    
}
